@model Models.Model.Diagnosis

@{
    ViewData["Title"] = "AddDiagnosis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Додати діагноз</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDiagnosis">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати діагноз" class="btn btn-primary" asp-action="AddDiagnosis" asp-route-id="@ViewBag.idPacient"/>
            </div>
        </form>
    </div>
</div>


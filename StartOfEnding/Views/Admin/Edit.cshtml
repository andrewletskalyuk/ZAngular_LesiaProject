@model Models.Model.Pacient

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Редагування даних</h5>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">По батькові</label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Прізвище</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата народження</label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anamnesis" class="control-label"></label>
                <input asp-for="Anamnesis" class="form-control" />
                <span asp-validation-for="Anamnesis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Циклічність</label>
                <input asp-for="Cycle" class="form-control" />
                <span asp-validation-for="Cycle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status Localic</label>
                <input asp-for="StatusLocalic" class="form-control" />
                <span asp-validation-for="StatusLocalic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Обстеження</label>
                <input asp-for="Survey" class="form-control" />
                <span asp-validation-for="Survey" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="ObjectiveId" class="control-label"></label>
                    <select asp-for="ObjectiveId" class="form-control" asp-items="ViewBag.ObjectiveId"></select>
                    <span asp-validation-for="ObjectiveId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <p>Діагнози:</p>
                        @foreach (var item in Model.PacientDiagnoses)
                        {
                            @if (item.Diagnosis != null)
                            {
                                <dt class="col-sm-10">
                                    <div class="container">
                                        <div class="row">
                                            <span>@item.Diagnosis.Name</span>
                                            @*<input type="submit" value="Додати" class="btn btn-primary" asp-action="AddDiagnosis" asp-route-id="@Model.Id" />*@
                                            <a asp-action="DelDiagnosis" asp-route-id="@item.id">Видалити</a>
                                        </div>
                                    </div>
                                </dt>
                            }
                        }
                        <a asp-action="AddDiagnosis" asp-route-id="@Model.Id">Додати новий діагноз</a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-action="SaveModifiedData" asp-route-id="@Model.Id" type="submit" value="Зберегти дані" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">Повернутись</a>
</div>

